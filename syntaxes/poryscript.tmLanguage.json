{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Poryscript",
	"patterns": [
		{
			"include": "#symbols"
		},
		{
			"include": "#tokens"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.pory",
					"match": "\\b(if|while|return|else|elif|end|break|continue|switch|case)\\b"
				},
				{
					"name": "keyword.other.poryscript",
					"match": "\\b(var|flag|defeated|format)\\b"
				}
			]
		},
		"tokens": {
			"patterns": [
				{
					"name": "keyword.operator.pory",
					"match": "\\b(\\*|<=|<|>=|>|==|!=|!)\\b"
				},
				{
					"name": "constant.numeric.pory",
					"match": "\\b(0x[0-9a-fA-F]+|[0-9]+)\\b"
				},
				{
					"name": "constant.language.pory",
					"match": "\\b(true|false|TRUE|FALSE)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.pory",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.pory",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name":"comment.line.double-slash.pory",
					"match": "(//).*$\n?"
				},
				{
					"name":"comment.line.number-sign.pory",
					"match": "(#).*$\n?"
				}
			]
		},
		"sections": {
			"patterns": [
				{
					"name": "string.other.pory",
					"begin": "`",
					"end": "`"
				}
			]
		},
		"symbols": {
			"patterns": [
				{
					"match": "\\b(script|text|movement|mapscripts)\\s*\\(*(local|global)*\\)*\\s*(\\w*)\\s*",
					"captures": {
						"1": {
							"name": "keyword.other.pory"
						},
						"2": {
							"name": "keyword.other.pory"
						},
						"3": {
							"name": "entity.name.function.pory"
						}
					}
				}
			]
		}
	},
	"scopeName": "source.pory"
}